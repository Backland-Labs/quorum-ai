AGENT_CONFIDENCE_THRESHOLD=0.7
VOTE_CONFIDENCE_THRESHOLD=0.6

# Performance and Timeouts
PROPOSAL_FETCH_TIMEOUT=30
VOTE_EXECUTION_TIMEOUT=60
MAX_RETRY_ATTEMPTS=3
