# Database Configuration
POSTGRES_USER=quorum
POSTGRES_PASSWORD=quorum
POSTGRES_DB=quorum

# Redis Configuration
REDIS_PASSWORD=quorum
REDIS_URL=redis://localhost:6379/0

# AI Provider (Required for autonomous voting)
OPENROUTER_API_KEY=your_openrouter_api_key

# EAS (Ethereum Attestation Service) Configuration for Vote Attestations
# Required for on-chain vote attestations on Base network
EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021
EAS_SCHEMA_UID=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
BASE_SAFE_ADDRESS=0x9876543210fedcba9876543210fedcba98765432
