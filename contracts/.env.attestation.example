# Environment variables for AttestationTracker deployment
# Copy this file to .env and fill in the actual values

# Deployment Configuration
PRIVATE_KEY=0x...                                    # Deployer private key (without 0x prefix in some cases)
ATTESTATION_TRACKER_OWNER=0x...                      # Address that will own the AttestationTracker contract

# EAS Contract Addresses by Network
# Ethereum Mainnet
# EAS_CONTRACT_ADDRESS=0xA1207F3BBa224E2c9c3c6D5aF63D0eb1582Ce587

# Arbitrum One  
# EAS_CONTRACT_ADDRESS=0xbD75f629A22Dc1ceD33dDA0b68c546A1c035c458

# Optimism
# EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021

# Polygon
# EAS_CONTRACT_ADDRESS=0x5E634ef5355f45A855d02D66eCD687b1502AF790

# Base
# EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021

# Sepolia Testnet (for testing)
EAS_CONTRACT_ADDRESS=0xC2679fBD37d54388Ce493F1DB75320D236e1815e

# RPC URLs (optional, can use foundry.toml instead)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Etherscan API Keys for contract verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
OPTIMISTIC_ETHERSCAN_API_KEY=YOUR_OPTIMISTIC_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY